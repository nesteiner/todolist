{
    "compilerOptions": {
	"target": "es5",
	"module": "esnext",
	"strict": true,
	"jsx": "preserve",
	"importHelpers": true,
	"moduleResolution": "node",
	"experimentalDecorators": true,
	"allowJs": true,
	"skipLibCheck": true,
	"esModuleInterop": true,
	"allowSyntheticDefaultImports": true,
	"sourceMap": true,
	"watch": true,
	"baseUrl": ".",
	"types": [
	    "webpack-env"
	],
	"paths": {
	    "@/*": [
		"src/*"
	    ]
	},
	"lib": [
	    "esnext",
	    "dom",
	    "dom.iterable",
	    "scripthost"
	]
    },
    "include": [
	"src/**/*.ts",
	"src/**/*.tsx",
	"src/**/*.d.ts",
	"src/*.d.ts",
	"src/**/*.vue",
	"tests/**/*.ts",
	"tests/**/*.tsx",
	"tests/**/*.d.ts",
    ],
    "exclude": [
	"node_modules"
    ]
}
